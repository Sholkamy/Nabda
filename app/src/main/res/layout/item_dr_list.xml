<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/ExplainedAboutDrLinearLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/NameOfDrTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="تجريب"
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="الأسم : "
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/SpecialtyOfDrTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="تجريب"
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="التخصص : "
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/AddressOfDrTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="تجريب"
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="العنوان: "
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/PhoneOfDrTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="تجريب"
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="رقم التلفون: "
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/PriceOfDrTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="تجريب"
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="سعر الكشف: "
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/DateOfDrTextView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="تجريب"
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="معاد الكشف: "
                android:autoSizeTextType="uniform"
                android:textColor="@color/colorWhite"
                android:padding="5dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/ReservationButton"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:text="أحجز   الأن"
            android:autoSizeTextType="uniform"
            android:background="@color/colorWhite"
            android:textColor="@color/colorActiveButton"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>



</LinearLayout>